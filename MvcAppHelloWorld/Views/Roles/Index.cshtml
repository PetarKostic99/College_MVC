@model IEnumerable<RoleViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Roles</h2>

<p>
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New", "Create", "Roles", new { @class = "btn btn-success btn-sm" })
    }
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Options
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RoleId }, new { @class = "btn btn-primary btn-sm" }) 
            @Html.ActionLink("Details", "Details", new { id=item.RoleId }, new { @class = "btn btn-info btn-sm" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.RoleId }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
